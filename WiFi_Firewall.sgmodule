#!name=网络防火墙
#!desc=启用后，设备从蜂窝网络切换至Wi-Fi，断开连接15秒
#!system=ios

[Script]
防火墙(规则) = type=rule,script-path=https://gist.githubusercontent.com/NobyDa/af8bab8cab062d77ae61646c670bc992/raw/Timed-Firewall.js
防火墙(拦截) = type=event,event-name=network-changed,script-path=https://gist.githubusercontent.com/NobyDa/e1f82ee2aa21c3958d8a7ce69ac27827/raw/WiFi-Firewall.js

[Rule]
AND,((NOT,((OR,((USER-AGENT,Surge*), (RULE-SET,https://raw.githubusercontent.com/NobyDa/Script/master/Surge/Apple.list))))), (SCRIPT,防火墙(规则))),REJECT-TINYGIF
